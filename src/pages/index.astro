---
import MainLayout from "../layouts/MainLayout.astro";
import Button from "../components/Button.astro";
import Link from "../components/Link.astro";
import { Image } from "astro:assets";
import thumbsup from "../assets/images/thumbsup.png";
import logo from "../assets/images/4tallet_logo.png";
---

<MainLayout title="Frontpage">
  <section class="mb-10">
    <div class="flex justify-center mb-5 lg:mt-20 mt-35">
      <span
        class="text-fuchsia-600 font-display font-bold lg:text-5xl text-2xl"
      >
        WELCOME TO 4TALLET
        <span class="text-rotate">
          <span>
            <span
              class="text-fuchsia-600 font-display font-bold lg:text-5xl text-2xl"
              >LIVE</span
            >
            <span class="text-white font-display font-bold lg:text-5xl text-2xl"
              >LIVE</span
            >
            <span
              class="text-amber-500 font-display font-bold lg:text-5xl text-2xl"
              >LIVE</span
            >
          </span>
        </span>
      </span>
    </div>
    <div
      class="flex justify-center mb-20 font-display font-bold lg:text-5xl text-m p-4 rounded-lg transition-transform duration-300 ease-in-out hover:text-fuchsia-600 hover:scale-105"
    >
      <a
        href="https://www.google.com/maps/place/4Tallet+Live/@55.6787232,12.5800544,17z/data=!3m1!4b1!4m6!3m5!1s0x4652531725968e3d:0x375f7534ebcd6f70!8m2!3d55.6787232!4d12.5800544!16s%2Fg%2F11x8_xs5g_?entry=ttu&g_ep=EgoyMDI1MTIwOS4wIKXMDSoKLDEwMDc5MjA3MUgBUAM%3D"
        target="_blank"><h2>At Højbro Pl. 3A, 1200 København</h2></a
      >
    </div>
    <div class="flex justify-center mb-20">
      <!-- Kort 1 -->
      <div class="hover-3d">
        <!-- content -->
        <figure class="lg:max-w-100">
          <img
            class="w-50 sm:w-32 md:w-40 lg:w-100"
            src="/logo/4tallet_logo.webp"
            alt="4tallet live logo"
          />
        </figure>
        <!-- 8 empty divs needed for the 3D effect -->
        <div></div>
        <div></div>
        <div></div>
        <div></div>
        <div></div>
        <div></div>
        <div></div>
        <div></div>
      </div>
    </div>
  </section>
  <section>
    <h1 class="lg:text-3xl text-2xl font-semibold text-center mx-auto mb-20">
      EVENTS AND OPENING HOURS
    </h1>
    <!-- åbningstider tabel -->
    <section class="w-full px-4 sm:px-6 lg:px-12 overflow-x-hidden">
      <div class="w-full overflow-x-auto">
        <table
          class="table table-compact sm:table-normal
             text-xs sm:text-sm md:text-base
             whitespace-nowrap
             min-w-full font-display"
        >
          <thead>
            <tr>
              <th>DAY</th>
              <th>EVENT</th>
              <th>TIME</th>
              <th>OPENING HOURS</th>
            </tr>
          </thead>

          <tbody>
            <tr>
              <th>MONDAY</th>
              <td>LIVE JAM</td>
              <td>21:00</td>
              <td>16:00 - 00:00</td>
            </tr>

            <tr>
              <th>TUESDAY</th>
              <td>LIVE JAM</td>
              <td>21:00</td>
              <td>16:00 - 02:00</td>
            </tr>

            <tr>
              <th>WEDNESDAY</th>
              <td>INTERNATIONAL QUIZ</td>
              <td>20:00</td>
              <td>16:00 - 02:00</td>
            </tr>

            <tr>
              <th>THURSDAY</th>
              <td>LIVE JAM</td>
              <td>19:00</td>
              <td>16:00 - 02:00</td>
            </tr>

            <tr>
              <th>FRIDAY</th>
              <td>POP JAM</td>
              <td>20:00</td>
              <td>16:00 - 05:00</td>
            </tr>

            <tr>
              <th>SATURDAY</th>
              <td>POP JAM</td>
              <td>20:00</td>
              <td>16:00 - 05:00</td>
            </tr>

            <tr>
              <th>SUNDAY</th>
              <td>NO EVENTS</td>
              <td>RESTING DAY</td>
              <td>CLOSED</td>
            </tr>
          </tbody>
        </table>
      </div>
    </section>
  </section>
</MainLayout>
